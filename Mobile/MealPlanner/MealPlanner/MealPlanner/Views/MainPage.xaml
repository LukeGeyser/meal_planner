<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MealPlanner.Views.MainPage"
             xmlns:vm="clr-namespace:MealPlanner.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:SignInViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary-Green">#669e2f</Color>
            <Color x:Key="Accent">#669e2f</Color>
            <Color x:Key="LightTextColor">#143046</Color>
            <Color x:Key="OffWhiteTextColor">#ebebeb</Color>
            <Color x:Key="alert">#db5151</Color>
            <Color x:Key="dark-theme-grey">#2d2d2d</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout
            Margin="5,0,5,5">
            
            <!-- MEAL PLANS -->
            <Frame CornerRadius="5"
                   BackgroundColor="{StaticResource Primary-Green}"
                   Padding="0,2,0,2">
                <Label HorizontalOptions="Center"
                       TextColor="{StaticResource OffWhiteTextColor}">Meal Plans</Label>
            </Frame>
            <!-- MEAL PLANS CONTENT-->
            <Grid Margin="0,0,0,0"
                  VerticalOptions="Center"
                  HorizontalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"></RowDefinition>
                    <RowDefinition Height="70"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"></ColumnDefinition>
                    <ColumnDefinition Width="120"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <!-- VEGETARIAN -->
                <RelativeLayout Grid.Row="0" Grid.Column="0"
                                x:Name="first"
                                BackgroundColor="{StaticResource dark-theme-grey}">
                    <Image Source="veg.jpg"
                           Aspect="AspectFill"
                           HorizontalOptions="Fill"
                           RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                           Opacity="0.5"
                           x:Name="VegImg">

                        <Image.GestureRecognizers >
                            <TapGestureRecognizer x:Name="VegTapped" Tapped="VegTapped_Tapped" />
                        </Image.GestureRecognizers>

                    </Image>

                    <Label VerticalOptions="Center" HorizontalOptions="Center"
                           x:Name="Veg"
                           TextColor="White"
                           Text="VEGETARIAN"
                           FontAttributes="Bold">

                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="VegTapped_Tapped" />
                        </Label.GestureRecognizers>

                    </Label>
                </RelativeLayout>

                <!-- PESCATERIAN -->
                <RelativeLayout Grid.Row="0" Grid.Column="1"
                                x:Name="second"
                                BackgroundColor="{StaticResource dark-theme-grey}">
                    <Image Source="pesc.jpg"
                           Aspect="AspectFill"
                           HorizontalOptions="FillAndExpand"
                           RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                           Opacity="0.5"
                           x:Name="PescImg">

                        <Image.GestureRecognizers >
                            <TapGestureRecognizer x:Name="PescTapped" Tapped="PescTapped_Tapped" />
                        </Image.GestureRecognizers>

                    </Image>
                    
                    <Label  VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                            x:Name="Pesc"
                            TextColor="White"
                            Text="PESCATARIAN"
                            FontAttributes="Bold">

                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="PescTapped_Tapped" />
                        </Label.GestureRecognizers>
                        
                    </Label>
                </RelativeLayout>

                <!-- WEIGHT LOSS -->
                <RelativeLayout Grid.Row="1" Grid.Column="0"
                                x:Name="third"
                                BackgroundColor="{StaticResource dark-theme-grey}">
                    <Image Source="weightLoss.jpeg"
                           Aspect="AspectFill"
                           HorizontalOptions="Fill"
                           RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                           Opacity="0.5">

                        <Image.GestureRecognizers >
                            <TapGestureRecognizer x:Name="LossTapped" Tapped="LossTapped_Tapped" />
                        </Image.GestureRecognizers>

                    </Image>

                    <Label VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                           x:Name="WeightLoss"
                           TextColor="White"
                           Text="WEIGHT LOSS"
                           FontAttributes="Bold">

                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="LossTapped_Tapped" />
                        </Label.GestureRecognizers>

                    </Label>
                </RelativeLayout>
                
                <!-- WEIGHT GAIN -->
                <RelativeLayout Grid.Row="1" Grid.Column="1"
                                x:Name="fourth"
                                BackgroundColor="{StaticResource dark-theme-grey}">
                    <Image Source="weightGain.jpeg"
                           Aspect="AspectFill"
                           HorizontalOptions="Fill"
                           RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                           Opacity="0.5">

                        <Image.GestureRecognizers >
                            <TapGestureRecognizer x:Name="GainTapped" Tapped="GainTapped_Tapped" />
                        </Image.GestureRecognizers>

                    </Image>

                    <Label VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                           x:Name="WeightGain"
                           TextColor="White"
                           Text="WEIGHT GAIN"
                           FontAttributes="Bold">

                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="GainTapped_Tapped" />
                        </Label.GestureRecognizers>

                    </Label>
                </RelativeLayout>
                
            </Grid>

            <!-- TIPS FOR WEIGHT GAIN -->
            <Frame CornerRadius="5"
                   BackgroundColor="{StaticResource Primary-Green}"
                   Padding="0,2,0,2">
                <Label HorizontalOptions="Center"
                       TextColor="{StaticResource OffWhiteTextColor}"
                       Text="Tips for Weight Loss"></Label>
            </Frame>
            <!-- TIPS FOR WEIGHT GAIN CONTENT -->

            <!-- TIPS FOR WEIGHT LOSS -->
            <Frame CornerRadius="5"
                   BackgroundColor="{StaticResource Primary-Green}"
                   Padding="0,2,0,2">
                <Label HorizontalOptions="Center"
                       TextColor="{StaticResource OffWhiteTextColor}"
                       Text="Tips for Weight Gain"></Label>
            </Frame>
            <!-- TIPS FOR WEIGHT GAIN CONTENT -->


        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>