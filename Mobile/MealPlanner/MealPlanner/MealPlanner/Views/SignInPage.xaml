<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MealPlanner.Views.SignInPage"
             xmlns:vm="clr-namespace:MealPlanner.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:SignInViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary-Green">#669e2f</Color>
            <Color x:Key="Accent">#669e2f</Color>
            <Color x:Key="LightTextColor">#2d2d2d</Color>
            <Color x:Key="OffWhiteTextColor">#143046</Color>
            <Color x:Key="alert">#db5151</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Padding="50,0,50,0"
                     VerticalOptions="Center">

            <Image Source="icon.png"
                   VerticalOptions="Center"></Image>
            
            <Label Text="Username:"
                   TextColor="{StaticResource LightTextColor}"
                   FontSize="Micro"></Label>

            <Entry FontSize="Micro"
                   WidthRequest="20"
                   Placeholder="Enter Your Username"
                   TextColor="{StaticResource LightTextColor}"
                   PlaceholderColor="{StaticResource LightTextColor}"
                   x:Name="Username"
                   Text="Test"></Entry>

            <Label Text="Password:" 
                   TextColor="{StaticResource LightTextColor}"
                   FontSize="Micro"></Label>
            
            <Entry FontSize="Micro"
                   WidthRequest="20"
                   Placeholder="Enter Your Password"
                   TextColor="{StaticResource LightTextColor}"
                   PlaceholderColor="{StaticResource LightTextColor}"
                   Margin="0,0,0,0"
                   x:Name="Password"
                   IsPassword="True"
                   Text="12345"></Entry>

            <Label x:Name="Error"
                   Text="Username and Password are Incorrect!"
                   FontSize="Micro"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource alert}"
                   IsVisible="False"
                   HorizontalTextAlignment="Center"></Label>



            <FlexLayout VerticalOptions="Center"
                        HorizontalOptions="Center">
                <Button Text="Sign In" 
                    x:Name="Sign_In"
                    Padding="0,0,0,0"
                    Margin="10,15,0,0"
                    WidthRequest="60" 
                    HeightRequest="30"
                    FontSize="Micro"
                    BackgroundColor="{StaticResource Primary-Green}"
                    TextColor="White"
                    Clicked="Sign_In_Clicked"></Button>

                <Button Text="Sign Up" 
                    x:Name="Sign_Up"
                    Padding="0,0,0,0"
                    Margin="10,15,0,0"
                    WidthRequest="60" 
                    HeightRequest="30"
                    FontSize="Micro"
                    BackgroundColor="{StaticResource Primary-Green}"
                    TextColor="White"
                    Clicked="Sign_Up_Clicked"></Button>
            </FlexLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>