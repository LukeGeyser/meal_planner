<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Class="MealPlanner.Views.ProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:MealPlanner.Views"
    BarBackgroundColor="#2d2d2d"
    BarTextColor="#fafafa"
    mc:Ignorable="d">
    <!--  Pages can be added as references or inline  -->



    <!--  CLIENT DETAILS  -->
    <ContentPage Title="Details">

        <ContentPage.Resources>
            <ResourceDictionary>
                <Color x:Key="Primary-Green">#669e2f</Color>
                <Color x:Key="Accent">#669e2f</Color>
                <Color x:Key="LightTextColor">#2d2d2d</Color>
                <Color x:Key="OffWhiteTextColor">#ebebeb</Color>
                <Color x:Key="alert">#db5151</Color>
                <Color x:Key="dark-theme-grey">#2d2d2d</Color>
            </ResourceDictionary>
        </ContentPage.Resources>

        <ScrollView>
            <StackLayout Margin="5,5,5,5">

                <!--  CLIENT DETAIL  -->
                <Frame
                    Padding="0,2,0,2"
                    BackgroundColor="{StaticResource Primary-Green}"
                    CornerRadius="10">
                    <Label
                        FontSize="Title"
                        HorizontalOptions="Center"
                        TextColor="{StaticResource OffWhiteTextColor}">
                        Client Details
                    </Label>
                </Frame>

                <StackLayout Padding="50,0,50,0">
                    <!--  FIRTNAME  -->
                    <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                        <Label
                            FontSize="Small"
                            HorizontalTextAlignment="Center"
                            Text="Fullname: "
                            TextColor="{StaticResource LightTextColor}" />
                        <Label
                            x:Name="FName"
                            FontSize="Small"
                            HorizontalTextAlignment="Center"
                            Text=""
                            TextColor="{StaticResource Primary-Green}" />
                    </StackLayout>

                    <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                        <Label
                            FontSize="Small"
                            HorizontalTextAlignment="Center"
                            Text="Username: "
                            TextColor="{StaticResource LightTextColor}" />
                        <Label
                            x:Name="UName"
                            FontSize="Small"
                            HorizontalTextAlignment="Center"
                            Text=""
                            TextColor="{StaticResource Primary-Green}" />
                    </StackLayout>
                </StackLayout>

                <!--  CHANGABLE DETAILS  -->
                <Frame
                    Padding="0,2,0,2"
                    BackgroundColor="{StaticResource Primary-Green}"
                    CornerRadius="10">
                    <Label
                        FontSize="Large"
                        HorizontalOptions="Center"
                        TextColor="{StaticResource OffWhiteTextColor}">
                        Changable Details
                    </Label>
                </Frame>

                <StackLayout Padding="50,0,50,0">
                    <!--  EMAIL ADDRESS  -->
                    <Label
                        Margin="0"
                        FontSize="Small"
                        Text="Email Address:"
                        TextColor="{StaticResource LightTextColor}" />

                    <!--  EMAIL ADDRESS  -->
                    <Entry
                        x:Name="Email"
                        Margin="0,-10,0,0"
                        FontSize="Small"
                        Placeholder="Enter Your Email Address"
                        TextColor="{StaticResource Primary-Green}"
                        WidthRequest="20" />

                    <!--  Phone Number  -->
                    <Label
                        Margin="0"
                        FontSize="Small"
                        Text="Phone Number:"
                        TextColor="{StaticResource LightTextColor}" />

                    <!--  Phone Number  -->
                    <Entry
                        x:Name="Phone"
                        Margin="0,-10,0,0"
                        FontSize="Small"
                        Placeholder="Enter Your Phone Number"
                        TextColor="{StaticResource Primary-Green}"
                        WidthRequest="20" />

                    <!--  DATE OF BIRTH  -->
                    <Label
                        FontSize="Small"
                        Text="Date Of Birth:"
                        TextColor="{StaticResource LightTextColor}" />

                    <!--  DATE OF BIRTH  -->
                    <DatePicker
                        x:Name="DOB"
                        Margin="0,-10,0,0"
                        FontSize="Small"
                        TextColor="{StaticResource Primary-Green}" />

                    <FlexLayout>
                        <StackLayout WidthRequest="100">
                            <Label
                                FontSize="Small"
                                Text="Weight:"
                                TextColor="{StaticResource LightTextColor}" />

                            <!--  USERNAME  -->
                            <Entry
                                x:Name="Weight"
                                Margin="0,-10,0,0"
                                FontSize="Small"
                                Placeholder="Enter Weight"
                                TextColor="{StaticResource Primary-Green}"
                                WidthRequest="20" />
                        </StackLayout>

                        <StackLayout WidthRequest="100">
                            <Label
                                FontSize="Small"
                                Text="Height:"
                                TextColor="{StaticResource LightTextColor}" />

                            <!--  USERNAME  -->
                            <Entry
                                x:Name="Height"
                                Margin="0,-10,0,0"
                                FontSize="Small"
                                Placeholder="Enter Height"
                                TextColor="{StaticResource Primary-Green}"
                                WidthRequest="20" />
                        </StackLayout>
                    </FlexLayout>

                    <Label
                        FontSize="Small"
                        Text="New Password:"
                        TextColor="{StaticResource LightTextColor}" />

                    <Entry
                        x:Name="Password"
                        Margin="0,-10,0,-10"
                        FontSize="Small"
                        IsPassword="True"
                        Placeholder="Enter Your New Password"
                        TextColor="{StaticResource Primary-Green}"
                        WidthRequest="20" />

                    <Button
                        x:Name="Save_Changes"
                        Margin="40,20,40,20"
                        Padding="0,0,0,0"
                        BackgroundColor="{StaticResource Primary-Green}"
                        Clicked="Save_Changes_Clicked"
                        CornerRadius="10"
                        FontSize="Medium"
                        HeightRequest="60"
                        Text="Save Changes"
                        TextColor="White"
                        WidthRequest="50" />
                </StackLayout>
            </StackLayout>
        </ScrollView>

    </ContentPage>

    <!--  APP PREFERENCE  -->
    <pages:AppPreferencesPage />

</TabbedPage>